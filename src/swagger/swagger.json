{
    "openapi": "3.0.0",
    "info": {
        "title": "API pi-back",
        "description": "Esta API documenta todas as rotas do projeto integrado back end do 5º semestre de Análise e Desenvolvimento do IESB"
    },
    "version": "1.0.0",
    "servers": [
        {
            "url": "http://31.220.31.209:5000",
            "description": "Api de produção"
        }
    ],
    "paths": {
        "/login": {
            "post": {
                "sumary": "Login de autenticação",
                "description": "Esta rota é responsável pela autenticação de usuários cadastrados",
                "tags": ["Login"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email",
                                    "pass"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "pass": {
                                        "type": "string",
                                        "minimum": 6
                                    }
                                }
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "joao.silva@email.com",
                                        "pass": "14@477asdfZ"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "value": "string",
                                            "example": "success"
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJmb28iOiI0YjkwYjM3Ny0wNjcyLTRmOWMtYjc5Ny1jOTkxYzM3Njc5NGUiLCJpYXQiOjE3MTYwNjAyNTV9.InRgJ2-lAbAzXtX4QOdfGmpsocmp3xxikqCsRhqGTdI"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "value": "error",
                                            "example": "success"
                                        },
                                        "description": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users": {
            "post": {
                "sumary": "Cadastro de novo usuário",
                "description": "Esta rota é responsável pela criação de novos usuários para acesso a plataforma",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "email",
                                    "pass"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "minimum": 3
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "pass": {
                                        "type": "string",
                                        "minimum": 6
                                    }
                                }
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "João Silva",
                                        "email": "joao.silva@email.com",
                                        "pass": "14@477asdfZ"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "value": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "usuário cadastrado com sucesso"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "value": "error",
                                            "example": "error"
                                        },
                                        "description": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "sumary": "Buscar usuários",
                "description": "Esta rota é responsável pela busca de usuários cadastrados",
                "tags": ["Users"],
                "security": [{"bearerToken": []}],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": {

                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "description": {
                                            "type": "string",
                                            "example": "nenhum usuário cadastrado"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "value": "string",
                                            "example": "error"
                                        },
                                        "description": {
                                            "type": "string",
                                            "example": "token não é válido || token obrigatório"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerToken": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "token"
            }
        }
    }
}